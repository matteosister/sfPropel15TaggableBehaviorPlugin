<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.sfPropel15TaggableBehaviorPlugin.lib.model"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://svn.propelorm.org/branches/1.5/generator/resources/xsd/database.xsd">
    
    <table name="sf_tag">
        <behavior name="timestampable" />
            
        <column name="id" type="integer" primaryKey="true" autoIncrement="true" />
        <column name="name" type="varchar" size="100" />
    </table>

    <table name="sf_tagging">
        <behavior name="timestampable" />

        <column name="id" type="integer" primaryKey="true" autoIncrement="true" />
        <column name="tag_id" type="integer" />
        <column name="taggable_model" type="varchar" size="30" />
        <column name="taggable_id" type="integer" />

        <foreign-key foreignTable="sf_tag">
            <reference local="tag_id" foreign="id" />
        </foreign-key>

        <index name="tag">
            <index-column name="tag_id" />
        </index>
        <index name="taggable">
            <index-column name="taggable_id" />
            <index-column name="taggable_model" />
        </index>
    </table>

</database>